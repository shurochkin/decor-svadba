  - var page = {title: 'Русский стиль', url: 'style/russian', type: 'style-page', class: 'page style russian', content: {desc: description, flow: flower, must: musthave}, list: [], breadcrumbs: [{link: 'style', name: 'Стиль свадьбы'}], slider: {path: 'style/russian/russian-', qnt: 6}}

block content
  +style-page(page)